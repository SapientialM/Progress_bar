<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/task1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray"
        android:layout_margin="20dp">
        <RelativeLayout
            android:id="@+id/R1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradmap_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/Tv1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed: 2/2"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:padding="10dp"/>
            <RelativeLayout
                android:id="@+id/R1_1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Tv1_1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp">
                <TextView
                    android:id="@+id/Tv1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Progress: 8/8"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/Tv1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="100.0%"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/R1_1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/R1_1_1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp">
                <TextView
                    android:id="@+id/Tv1_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Progress: 5/5"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/Tv1_5"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100.0%"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/R1_2"
            android:layout_below="@+id/R1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Object_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/R1_3"
            android:layout_below="@+id/R1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected end of 2021-3-31"
                android:textColor="@color/gray_text"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/R1_4"
            android:layout_below="@+id/R1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Countdown: 3 days"
                android:textColor="@color/gray_text"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

    </RelativeLayout></RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>